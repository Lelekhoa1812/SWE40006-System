{
  "name": "Doctor",
  "description": "Doctor schema extending User with medical professional information",
  "extends": "User",
  "fields": {
    "medicalLicense": {
      "type": "string",
      "description": "Medical license number",
      "required": true,
      "unique": true,
      "index": "unique"
    },
    "specialties": {
      "type": "array",
      "description": "List of medical specialties",
      "items": {
        "type": "string",
        "enum": [
          "cardiology",
          "dermatology",
          "endocrinology",
          "gastroenterology",
          "general_practice",
          "neurology",
          "oncology",
          "orthopedics",
          "pediatrics",
          "psychiatry",
          "radiology",
          "surgery",
          "urology"
        ]
      },
      "minItems": 1,
      "index": "index"
    },
    "bio": {
      "type": "string",
      "description": "Doctor's professional biography",
      "maxLength": 2000
    },
    "location": {
      "type": "object",
      "description": "Doctor's practice location",
      "properties": {
        "address": {
          "type": "string",
          "description": "Street address"
        },
        "city": {
          "type": "string",
          "required": true
        },
        "state": {
          "type": "string",
          "required": true
        },
        "country": {
          "type": "string",
          "required": true,
          "default": "US"
        },
        "postalCode": {
          "type": "string",
          "pattern": "^\\d{5}(-\\d{4})?$"
        },
        "coordinates": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "lng": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            }
          }
        }
      }
    },
    "availability": {
      "type": "object",
      "description": "Doctor's availability schedule",
      "properties": {
        "timezone": {
          "type": "string",
          "default": "UTC"
        },
        "schedule": {
          "type": "array",
          "description": "Weekly schedule",
          "items": {
            "type": "object",
            "properties": {
              "day": {
                "type": "string",
                "enum": [
                  "monday",
                  "tuesday",
                  "wednesday",
                  "thursday",
                  "friday",
                  "saturday",
                  "sunday"
                ]
              },
              "startTime": {
                "type": "string",
                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
              },
              "endTime": {
                "type": "string",
                "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
              },
              "isAvailable": {
                "type": "boolean",
                "default": true
              }
            }
          }
        }
      }
    },
    "rating": {
      "type": "number",
      "description": "Average rating from patients",
      "minimum": 0,
      "maximum": 5,
      "default": 0
    },
    "reviewCount": {
      "type": "number",
      "description": "Number of reviews received",
      "minimum": 0,
      "default": 0
    },
    "consultationFee": {
      "type": "number",
      "description": "Fee per consultation in cents",
      "minimum": 0
    },
    "languages": {
      "type": "array",
      "description": "Languages spoken by the doctor",
      "items": {
        "type": "string"
      },
      "default": ["en"]
    }
  },
  "indexes": [
    {
      "fields": ["medicalLicense"],
      "unique": true
    },
    {
      "fields": ["specialties"]
    },
    {
      "fields": ["location.city", "location.state"]
    },
    {
      "fields": ["rating", "reviewCount"]
    },
    {
      "fields": ["role", "isActive", "specialties"]
    }
  ]
}
