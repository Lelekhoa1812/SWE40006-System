{
  "name": "Chat",
  "description": "Chat schema for patient-doctor messaging",
  "fields": {
    "id": {
      "type": "string",
      "description": "Unique chat identifier",
      "required": true,
      "index": "unique"
    },
    "subscriptionId": {
      "type": "string",
      "description": "ID of the subscription this chat belongs to",
      "required": true,
      "index": "index"
    },
    "participants": {
      "type": "array",
      "description": "List of participant user IDs",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "maxItems": 2,
      "index": "index"
    },
    "status": {
      "type": "string",
      "description": "Chat status",
      "required": true,
      "enum": ["active", "archived", "closed"],
      "default": "active",
      "index": "index"
    },
    "lastMessageAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the last message",
      "index": "index"
    },
    "unreadCount": {
      "type": "object",
      "description": "Unread message count per participant",
      "properties": {
        "patient": {
          "type": "number",
          "minimum": 0,
          "default": 0
        },
        "doctor": {
          "type": "number",
          "minimum": 0,
          "default": 0
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional chat metadata",
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 100
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "priority": {
          "type": "string",
          "enum": ["low", "normal", "high", "urgent"],
          "default": "normal"
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Chat creation timestamp",
      "index": "index"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "indexes": [
    {
      "fields": ["subscriptionId"],
      "unique": true
    },
    {
      "fields": ["participants"]
    },
    {
      "fields": ["status", "lastMessageAt"]
    },
    {
      "fields": ["createdAt"]
    }
  ]
}
